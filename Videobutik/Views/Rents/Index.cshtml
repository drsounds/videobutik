@model IEnumerable<Videobutik.Models.Rent>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Rents", new { userId = Request.QueryString["userId"]}, new { })
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Movie", "Index", "Rents", new { sort = "movie", ascending=!ViewBag.Ascending }, new { })
        </th>
        <th>
            @Html.ActionLink("User", "Index", "Rents", new { sort = "user", ascending = !ViewBag.Ascending }, new { })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsReturned)
        </th>
        <th>
            Date Returned
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Movie.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsReturned)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Returned)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RentId }) |
            @Html.ActionLink("Details", "Details", new { id=item.RentId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RentId })
        </td>
    </tr>
}

</table>
